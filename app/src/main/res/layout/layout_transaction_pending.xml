<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CommonScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingTop="8dp">

        <com.kms.demo.component.widget.ProgressingAnimationLayout
            android:id="@+id/progressingAnimationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_status_desc"
            style="@style/Text.cfd6eb.14"
            android:layout_marginTop="8dp"
            android:text="@string/processing" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_wallet_list_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:divider="@drawable/bg_transaction_info_transparent_divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.8f96a5.12"
                    android:text="@string/tx_type" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_type"
                    style="@style/Text.cfd6eb.14"
                    tools:text="Send" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.8f96a5.12"
                    android:text="@string/send_amount" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_send_amount"
                    style="@style/Text.cfd6eb.14"
                    tools:text="Send" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.8f96a5.12"
                    android:text="@string/fee" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_fee_amount"
                    style="@style/Text.cfd6eb.14"
                    tools:text="Send" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.8f96a5.12"
                    android:text="@string/send_time" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_send_time"
                    style="@style/Text.cfd6eb.14"
                    tools:text="Send" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.8f96a5.12"
                    android:text="@string/end_time" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_finish_time"
                    style="@style/Text.cfd6eb.14"
                    android:text="@string/processing" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.8f96a5.12"
                    android:text="@string/note" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_note"
                    style="@style/Text.cfd6eb.14"
                    tools:text="Send" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_wallet_list_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                style="@style/Text.8f96a5.12"
                android:text="@string/txhash" />

            <TextView
                android:id="@+id/tv_transaction_hash"
                style="@style/Text.cfd6eb.13"
                android:layout_marginTop="8dp"
                android:gravity="left"
                tools:text="0xA9ed952E3040A0C925d8a718760443A4973e2117" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.8f96a5.12"
                    android:text="@string/payment_wallet" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_sender_wallet_name"
                    style="@style/Text.8f96a5.12"
                    tools:text="钱包名称" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_from_address"
                style="@style/Text.cfd6eb.13"
                android:layout_marginTop="8dp"
                android:gravity="left"
                tools:text="0xA9ed952E3040A0C925d8a718760443A4973e2117" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.8f96a5.12"
                    android:text="@string/receiving_wallet" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_receiver_wallet_name"
                    style="@style/Text.8f96a5.12"
                    tools:text="钱包名称" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_to_address"
                style="@style/Text.cfd6eb.13"
                android:layout_marginTop="8dp"
                android:gravity="left"
                tools:text="0xA9ed952E3040A0C925d8a718760443A4973e2117" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>



