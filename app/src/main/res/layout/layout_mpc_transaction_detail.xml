<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CommonScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.kms.demo.component.widget.ProgressingAnimationLayout
            android:id="@+id/progressingAnimationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_mpc_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_failed" />

        <TextView
            android:id="@+id/tv_status_desc"
            style="@style/Text.cfd6eb.14"
            android:layout_marginTop="8dp"
            android:text="@string/mpc_executing_with_dot" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_wallet_list_divider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:divider="@drawable/bg_transaction_detail_transparent_divider"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_sum_amount"
                style="@style/Text.508dff.22"
                tools:text="-120.8899" />

            <TextView
                style="@style/Text.508dff.10"
                android:text="ETH" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:divider="@drawable/bg_transaction_info_transparent_divider"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.8f96a5.12"
                    android:text="@string/to" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_to_address"
                    style="@style/Text.cfd6eb.14"
                    android:gravity="right"
                    android:maxWidth="200dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.8f96a5.12"
                    android:text="@string/send_amount" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_send_amount"
                    style="@style/Text.cfd6eb.14"
                    tools:text="Send" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.8f96a5.12"
                    android:text="@string/fee" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_fee_amount"
                    style="@style/Text.cfd6eb.14"
                    tools:text="Send" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.8f96a5.12"
                    android:text="@string/note" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_note"
                    style="@style/Text.cfd6eb.14"
                    tools:text="Send" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
