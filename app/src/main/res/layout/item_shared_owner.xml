<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_shared_owner"
        style="@style/Text.a9b0ca.14"
        android:text="Owner1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_payment_wallet_info"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_shared_owner">

        <TextView
            android:id="@+id/tv_wallet_avatar"
            style="@style/Text.fff.24"
            android:background="@drawable/icon_avatar_medium_4"
            tools:text="B" />

        <TextView
            android:id="@+id/tv_wallet_name"
            style="@style/Text.f0f4fd.14"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            app:layout_constraintLeft_toRightOf="@id/tv_wallet_avatar"
            tools:text="Biganxin" />

        <TextView
            android:id="@+id/tv_wallet_address"
            style="@style/Text.8f96a5.10"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical|left"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@id/tv_wallet_avatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_wallet_name"
            tools:text="asdasdafas21asda98das9d8as98d9as8duas9duasaasdasdafas21asda98das9d8as98d9as8duas9dua..." />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
