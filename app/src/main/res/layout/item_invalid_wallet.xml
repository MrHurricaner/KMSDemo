<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <TextView
        android:id="@+id/tv_avatar"
        style="@style/Text.fff.14"
        android:background="@drawable/icon_avatar_medium_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_wallet_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="B" />


    <TextView
        android:id="@+id/tv_wallet_name"
        style="@style/Text.f0f4fd.14"
        android:layout_width="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="left"
        android:lines="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_avatar"
        app:layout_constraintRight_toLeftOf="@id/iv_selected"
        app:layout_constraintTop_toTopOf="@id/tv_avatar"
        tools:text="BiganxinBiganBiganxinBiganBiganxinBiganBiganxinBiganBiganxinBigan" />

    <TextView
        android:id="@+id/tv_wallet_address"
        style="@style/Text.8f96a5.10"
        android:layout_width="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:gravity="left"
        android:lines="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_avatar"
        app:layout_constraintRight_toLeftOf="@id/iv_selected"
        app:layout_constraintTop_toBottomOf="@id/tv_wallet_name"
        tools:text="0x6ade0d1b1fc8d1caa12defâ€¦0x6ade0d1b1fc8d1caa12def0x6ade0d1b1fc8d1caa12def" />


    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_wallet_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>