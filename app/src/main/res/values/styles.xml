<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/color_101119</item>
    </style>

    <!-- 自定义对话框风格 -->
    <style name="CommonDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景变暗 默认是根据windowIsFloating来决定的-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--listView style-->
    <style name="CommonListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:listSelector">@color/color_00000000</item>
        <item name="android:cacheColorHint">@color/color_00000000</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="Animation.CommonDialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_common_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_common_exit</item>
    </style>

    <style name="Animation_slide_in_bottom" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_bottom</item>
    </style>

    <style name="Animation_slide_in_top" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_top</item>
    </style>

    <style name="Theme_Progressbar_circle1">
        <item name="android:indeterminateDrawable">@drawable/pb_circle</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxWidth">64dp</item>
        <item name="android:maxHeight">64dp</item>
    </style>

    <style name="Dialog_FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_00000000</item>
        <item name="colorPrimaryDark">@color/color_00000000</item>
        <item name="colorAccent">@color/color_00000000</item>
        <item name="android:windowBackground">@color/color_00000000</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_373E51</item>
        <item name="colorControlActivated">@color/color_ff3030</item>
    </style>

    <style name="EditTextWithUnderlineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_f1f0f0</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@drawable/bg_account_activation_et</item>
        <item name="android:textColorHint">@color/color_4a4e63</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
    </style>

    <style name="ButtonWithGradientStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_heavy_button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_heavy_button</item>
    </style>
    
    <style name="CommonScrollView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

</resources>
